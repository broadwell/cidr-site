---
import cidrLogo from "../assets/cidr.trsp.no-text.280x140.png";

import Nav from "./Nav.astro";
---

<header role="banner">
  <div>
    <a href={Astro.site.pathname}>
      <img src={cidrLogo} alt="Center for Interdisciplinary Digital Research" />
    </a>
    <span>Center for Interdisciplinary Digital Research</span>
  </div>
  <Nav />
</header>

<style>
  header {
    background-color: var(--fog-light);
    box-shadow: 0 0 4px 4px rgb(0 0 0 / 40%);
    display: flex;
    flex-direction: column;
    gap: 0.5em;
    padding-bottom: 1em;
    padding-top: 0.5em;
    width: 100vw;
  }

  div {
    align-items: flex-end;
    display: flex;
    gap: 1em;
    margin: 0 auto;
    width: var(--wrap);
  }

  span {
    border-style: solid;
    border-width: 1px 0;
    font-size: 1.8em;
    font-weight: 600;
    margin-bottom: 15px;
    padding: 10px;
    text-shadow: 0 0 6px white;
  }

  img {
    filter: drop-shadow(2px 2px 6px rgba(0, 0, 0, .4))
  }
</style>
