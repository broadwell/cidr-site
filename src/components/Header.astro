---
import cidrLogo from "../assets/cidr.trsp.no-text.280x140.png";

import Nav from "./Nav.astro";
---

<header role="banner">
  <div>
    <a href={Astro.site.pathname}>
      <img
        src={cidrLogo}
        alt="Center for Interdisciplinary Digital Research"
        height="140"
        width="280"
      />
    </a>
    <span>Center for Interdisciplinary Digital Research</span>
  </div>
  <Nav />
</header>

<style>
  header {
    --sticky-offset: 240px;

    background-color: var(--fog-light);
    box-shadow: 0 0 4px 4px rgb(0 0 0 / 40%);
    display: flex;
    flex-direction: column;
    gap: 0.5em;
    padding-bottom: 1em;
    padding-top: 0.5em;
    width: 100vw;
    overflow-x: hidden;
    position: sticky;
    top: calc(0px - var(--sticky-offset) - 0.5em);
    z-index: 4;
  }

  div {
    align-items: center;
    display: flex;
    flex-direction: column;
    gap: 1em;
    margin: 0 auto;
    width: var(--wrap);
  }

  span {
    border-style: solid;
    border-width: 1px 0;
    font-size: 1.4em;
    font-weight: 600;
    margin-bottom: 15px;
    padding: 10px;
    text-align: center;
    text-shadow: 0 0 6px white;
  }

  img {
    filter: drop-shadow(2px 2px 6px rgba(0, 0, 0, 0.4));
    max-height: calc(100vw / 2);
    max-width: 100vw;
  }

  @media screen and (min-width: 768px) {
    span {
      font-size: 1.8em;
    }
  }

  @media screen and (min-width: 1100px) {
    header {
      --sticky-offset: 147px;
    }

    div {
      align-items: flex-end;
      flex-direction: row;
    }
  }
</style>

<script>
  // if javascript is available, set an accurate value for --sticky-offset
  //  (reasonable defaults are used if javascript is not available)
  const header = document.querySelector("header");
  const setStickyOffset = () => {
    header.style.setProperty(
      "--sticky-offset",
      header.querySelector("div").getBoundingClientRect().height + "px",
    );
  };
  window.addEventListener("load", setStickyOffset);
  window.addEventListener("resize", setStickyOffset);
</script>
