---
import events from "../data/events.yaml";
const f = new Intl.DateTimeFormat("en-US", {
  month: "long",
  day: "numeric",
  weekday: "long",
  hour: "numeric",
  minute: "numeric",
  year: "numeric",
});
---

<section>
  {events.map(async (event, idx) => {
    return (
      <>
        <input type="checkbox" id={`event-${idx}`} />
        <label for={`event-${idx}`}>
          <header>{event.title}</header>
          <time datetime={event.datetime.toISOString()}>
            {f.format(event.datetime)}
          </time>
          <div set:html={event.description} />
        </label>
      </>
    )
  })}
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    padding: 2em 0;
    position: relative;
    padding-left: 6px;
  }

  section::before {
    background: var(--cool-grey);
    background: linear-gradient(
      to bottom,
      transparent 0%,
      var(--cool-grey) 6%,
      var(--cool-grey) 94%,
      transparent 100%
    );
    content: "";
    display: block;
    height: 100%;
    position: absolute;
    top: 0;
    width: 6px;
    z-index: 2;
  }

  header,
  time {
    display: block;
    transition: margin-right 0.2s 0.2s ease-in-out,
      margin-left 0.2s 0.2s ease-in-out;
    width: fit-content;
  }

  header {
    color: var(--cardinal);
    font-size: 0.9em;
  }

  time {
    font-size: 0.7em;
    font-style: italic;
  }

  input[type="checkbox"] {
    display: none;
  }

  label {
    align-items: flex-start;
    background-color: transparent;
    border-radius: 0.25em;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    margin: 0.2em 0;
    margin-left: 1rem;
    padding: 0.5em;
    position: relative;
    transition: width 0.2s 0.2s ease-in-out,
      background-color 0.2s 0.2s ease-in-out, box-shadow 0.2s 0.2s ease-in-out;
    width: calc(100% - 1rem);
    z-index: 3;

    &::before {
      background: white;
      border: 4px solid var(--cool-grey);
      content: "";
      display: block;
      height: 15px;
      left: calc(-0.25em - 1rem + 3px);
      margin-top: 0;
      position: absolute;
      top: 1em;
      transform: rotate(45deg);
      transition: transform 0.2s ease-in-out, left 0.2s 0.2s ease-in-out,
        right 0.2s 0.2s ease-in-out;
      width: 15px;
      z-index: 10;
    }

    &:hover {
      background-color: var(--fog-light);
    }
  }

  label > div {
    border-top: 1px solid var(--cardinal);
    font-size: 0;
    margin-top: 0.5em;
    max-width: 100%;
    opacity: 0;
    overflow: hidden;
    padding-top: 0.5em;
    transition: opacity 0.2s ease-in-out, font-size 0.2s 0.2s ease-in-out;
  }

  input:checked + label {
    background-color: var(--fog-light);
    box-shadow: 0 1rem 3rem rgb(0 0 0 / 18%);
    transition: width 0.2s ease-in-out, background-color 0.2s ease-in-out,
      box-shadow 0.2s ease-in-out;

    header,
    time {
      transition: margin-right 0.2s ease-in-out;
    }

    &::before {
      right: 1.5rem;
      transform: none;
      transition: transform 0.2s ease-in-out, right 0.2s ease-in-out;
    }

    & > div {
      font-size: 0.7em;
      opacity: 1;
      transition: opacity 0.2s 0.2s ease-in-out, font-size 0.2s ease-in-out;
    }
  }

  @media screen and (min-width: 768px) {
    section::before {
      left: 50%;
      margin-left: -3px;
    }

    header,
    time {
      text-align: right;
    }

    header {
      font-size: 1em;
    }

    time {
      font-size: 0.9em;
    }

    label {
      align-items: flex-end;
      margin-left: 0;
      width: calc(50% - 0.5em);

      &::before {
        left: unset;
        right: calc(-0.5em + 3px);
        transform: translate(50%, 0) rotate(45deg);
      }

      &:nth-of-type(2n) {
        align-items: flex-start;
        align-self: flex-end;
        padding-left: 0.5em;

        time,
        header {
          text-align: left;
        }

        &::before {
          left: calc(-0.5em - 3px);
          transform: translate(-50%, 0) rotate(45deg);
        }
      }
    }

    input:checked + label {
      width: 100%;

      header,
      time {
        margin-right: 2rem;
      }

      &::before {
        transform: translate(50%, 0) rotate(0deg);
      }

      & > div {
        font-size: 0.9em;
      }

      &:nth-of-type(2n) {
        &::before {
          left: 1.5rem;
          transform: translate(-50%, 0) rotate(0deg);
          transition: transform 0.2s ease-in-out, left 0.2s ease-in-out;
        }

        header,
        time {
          margin-left: 2rem;
          transition: margin-left 0.2s ease-in-out;
        }
      }
    }

    /* styling for included description html */
    :global(ul) {
      padding-left: 1em;
    }
  }
</style>
