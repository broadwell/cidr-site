---
import Icon from "./Icon.astro";
const links = [
  { label: "Home", icon: "home", url: "" },
  { label: "People", url: "people/" },
  { label: "Dev. Team", url: "developers/" },
  { label: "ATS Program", url: "ats-program/" },
  { label: "Projects", url: "projects/" },
  { label: "Workshops", url: "workshops/" },
  { label: "Consulting", url: "consulting/" },
  { label: "Data", url: "data/" },
];
---

<nav>
  {links.map(({ label, url, icon = false }) => (
    <a
      class={
        Astro.canonicalURL.pathname === Astro.site.pathname + url
          ? "active"
          : null
      }
      href={
        Astro.canonicalURL.pathname === Astro.site.pathname + url
          ? null
          : Astro.site.pathname + url
      }
      aria-label={icon ? label : null}
    >
      {icon ? <Icon name={icon} /> : label}
    </a>
  ))}
</nav>

<style>
  nav {
    align-items: center;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5em 0.8em;
    justify-content: center;
    margin: 0 auto;
    padding: 0 0.5em;
    width: var(--wrap);
  }

  a {
    display: inline-block;
    position: relative;
    text-decoration: none;
    color: var(--cardinal);
    font-size: 1.1em;
    white-space: nowrap;

    &[href] {
      &:after {
        background-color: var(--cardinal);
        bottom: -1px;
        content: "";
        height: 1px;
        left: 50%;
        pointer-events: none;
        position: absolute;
        transition-duration: 400ms;
        transition-property: width, left;
        transition-timing-function: cubic-bezier(0.25, 0.8, 0.25, 1);
        width: 0%;
      }

      &:focus,
      &:hover {
        color: var(--black-1);

        &:after {
          left: 0%;
          width: 100%;
        }
      }
    }

    &:not([href]) {
      color: var(--black-1);

      &:after {
        background-color: var(--cardinal);
        bottom: -2px;
        content: "";
        height: 2px;
        pointer-events: none;
        position: absolute;
        width: 100%;
        left: 0%;
      }
    }

    :global(svg) {
      height: 1.2rem;
      width: 1.2rem;
      transform: translateY(3px);
      vertical-align: baseline;
    }
  }

  @media screen and (min-width: 750px) {
    nav {
      justify-content: flex-start;
    }
  }

  @media screen and (min-width: 980px) {
    nav {
      gap: 0.5em 2em;
    }

    a {
      font-size: 1.2em;
    }
  }
</style>
